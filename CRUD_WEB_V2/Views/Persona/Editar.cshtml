@model CRUD_WEB_V2.Models.ViewModels.PersonaViewModel
@{
    ViewBag.Title = "Editar";
}

<h2>Nuevo</h2>


@using (Html.BeginForm("Editar", "Persona", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-12">
            @Html.HiddenFor(d => d.idPersona)
            <div>
                @Html.LabelFor(d => d.nombre)
                @Html.ValidationMessageFor(d => d.nombre, null, new { @class = "alert-danger" })
                @Html.TextBoxFor(d => d.nombre, "", new { @class = "form-control" })
            </div>

            <div>
                @Html.LabelFor(d => d.edad)
                @Html.ValidationMessageFor(d => d.edad, null, new { @class = "alert-danger" })
                @Html.TextBoxFor(d => d.edad, "", new { @class = "form-control" })
            </div>

            <div>
                @Html.LabelFor(d => d.descripcion)
                @Html.ValidationMessageFor(d => d.descripcion, null, new { @class = "alert-danger" })
                @Html.TextBoxFor(d => d.descripcion, "", new { @class = "form-control" })
            </div>


            <div style="padding-top:10px;">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </div>
    </div>
}
